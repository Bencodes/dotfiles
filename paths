# Rust
export CARGO_HOME=$HOME/.cargo

# Java
export JAVA_HOME="$(/usr/libexec/java_home)"

# Kotlin
export KOTLIN_HOME="/usr/local/opt/kotlin/"

# Configure the paths
paths=(
  /usr/local/sbin               
  $CARGO_HOME/bin               # Rust
  $JAVA_HOME/bin                # Java
  $HOME/.bin                    # User
  /usr/bin                      # System
  /usr/sbin
  /usr/bin
  /usr/sbin
  /sbin
  /opt/homebrew/bin             # Homebrew
  /opt/homebrew/bin             # Homebrew
)

for search_path in ${paths[@]}; do
  [[ -d $search_path ]] \
  && [[ $PATH != *$search_path* ]] \
  && PATH=$search_path:$PATH
done

export PATH
